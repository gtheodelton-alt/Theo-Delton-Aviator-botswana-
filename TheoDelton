<body>
  <div class="card">
    <h1>Theo Avi Bot ✈️</h1>
    <div class="creator">Created by Theo Delton · 74815718</div>

    <label>Enter Pink Crush Time (24h)</label>
    <input type="time" id="timeInput">

    <button onclick="calculate()">Calculate Predictions</button>

    <ul id="results"></ul>
  </div>

  <script>
    function calculate() {
      const input = document.getElementById("timeInput").value;
      const list = document.getElementById("results");
      list.innerHTML = "";

      if (!input) {
        alert("Please enter time");
        return;
      }

      const adds = [9, 15, 18, 22, 25, 30];
      const [h, m] = input.split(":").map(Number);

      adds.forEach(min => {
        let total = h * 60 + m + min;
        let nh = Math.floor(total / 60) % 24;
        let nm = total % 60;

        const li = document.createElement("li");
        li.textContent = `${String(nh).padStart(2,"0")}:${String(nm).padStart(2,"0")} (+${min} min)`;
        list.appendChild(li);
      });
    }
  </script>
